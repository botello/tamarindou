template(name='Quiz')
  .quiz
    //- each(quiz in quizzes)
    //- h1= quiz.template
    .ui.grid.container
      .ui.text.container
        each quizzes
          +_Quiz

template(name="_Quiz")
  .quiz
    .ui.segments
      +_QuizProgress
      +_QuizContent
      +_QuizContent_Token
      +_QuizContent_TrueOrFalse
      +_QuizContent_MultipleChoice
      +_QuizContent_SingleChoice
      +_QuizControl
    +_QuizResult

template(name="_QuizProgress")
  .ui.basic.segment
    #quiz-progress.ui.indicating.progress(data-value="10" data-total="20")
      .bar

template(name="_QuizContent")
  .ui.basic.segment
    h2.ui.header
      | #{template}
  .ui.basic.segment
    p #{question}

template(name="_QuizControl")
  .ui.right.aligned.segment.container
    button.ui.right.labeled.icon.button
      i.fast.forward.icon
      | Saltar
    button.ui.right.labeled.icon.button
      i.send.icon
      | Revisar
    button.ui.primary.right.labeled.icon.button
      i.right.chevron.icon
      | Continuar

template(name="_QuizResult")
  if correct
    .ui.positive.icon.message
      i.check.circle.outline.icon
      .content
        .header ¡Correcto!
        //-p
        //-  button.ui.basic.button
        //-    | Reportar un problema
        //-  button.ui.basic.button
        //-    | Discutir soluci&oacute;n
  else
    .ui.negative.icon.message
      i.remove.circle.outline.icon
      .content
        .header ¡Incorrecto!
        //-p
        //-  button.ui.basic.button
        //-    | Reportar un problema
        //-  button.ui.basic.button
        //-    | Discutir soluci&oacute;n

template(name="_QuizContent_Token")
  .ui.basic.segment
    h2.ui.header
      | No es lo mismo un metro de encaje negro, que...

  .ui.basic.segment
    button.ui.primary.compact.big.button un
    button.ui.primary.compact.big.button negro

  .ui.basic.segment
    button.ui.compact.big.button metro
    button.ui.compact.big.button un
    button.ui.compact.big.button encaje
    button.ui.compact.big.button te

template(name='_QuizContent_TrueOrFalse')
  .ui.basic.segment
    h2.ui.header
      | Lorem ipsum shit shit

  .ui.basic.segment
    .ui.field
      .ui.center.aligned.container
        .ui.buttons
          button.ui.green.button Cierto
          .or(data-text="o")
          button.ui.red.button Falso

